{{< layout }}
{{$ content }}

<h2>{{ owner.nick_name }}さんの日記</h2>
<div class="row panel panel-primary" id="entry-entry">
  <div class="entry-title">タイトル: <a href="/diary/entry/{{ entry.id }}">{{ entry.title }}</a></div>
  <div class="entry-content">
    {{ content }}
  </div>
  {{# is_private }}
  <div class="text-danger entry-private">範囲: 友だち限定公開</div>
  <div class="entry-created-at">更新日時: {{ created_at }}</div>
  {{/ is_private }}
</div>

<h3>この日記へのコメント</h3>
<div class="row panel panel-primary" id="entry-comments">
  {{# comments }}
  <div class="comment">
    <div class="comment-owner"><a href="/profile/{{ account_name }}">{{ nick_name }}さん</a></div>
    <div class="comment-comment">
      {{ comment }}
    </div>
    <div class="comment-created-at">投稿時刻:{{ created_at }}</div>
  </div>
  {{/ comments }}
</div>

<h3>コメントを投稿</h3>
<div id="entry-comment-form">
  <form method="POST" action="/diary/comment/{{ id }}">
    <div>コメント: <textarea name="comment" ></textarea></div>
    <div><input type="submit" value="送信" /></div>
  </form>
</div>

{{/ content }}
{{/ layout }}
